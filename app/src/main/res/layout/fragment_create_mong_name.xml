<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_create_mong_name_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_create_mong_name_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_settings_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text="두리몽 만나기"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_create_mong_name_description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/suite_semi_bold"
        android:text="나와 함께할\n두리몽의 이름은 무엇인가요?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_create_mong_name_top" />

    <TextView
        android:id="@+id/tv_create_mong_name_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/suite_medium"
        android:text="두리몽 이름은 다시 바꿀 수 있어요!"
        android:textColor="@color/gray3"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_create_mong_name_description1"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mong_name_description1" />

    <EditText
        android:id="@+id/et_create_mong_name"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/v_settings_edit_text_radius_20dp"
        android:fontFamily="@font/suite_medium"
        android:hint="이름을 입력해 주세요. (1~6자)"
        android:paddingHorizontal="12dp"
        android:textColor="@color/gray4"
        android:textColorHint="@color/gray3"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_create_mong_name_description2"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mong_name_description2" />

    <Button
        android:id="@+id/btn_create_mong_complete"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/v_home_radius_8dp"
        android:backgroundTint="@color/main_purple"
        android:fontFamily="@font/suite_semi_bold"
        android:text="두리몽 만나러 가기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>