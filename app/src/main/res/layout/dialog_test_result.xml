<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="342dp"
    android:layout_height="294dp"
    android:background="@drawable/rounded_background_result"
    android:backgroundTint="@null">

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text="_"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/tv_result_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text="님의 점수는 "
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/tv_user_name"
            app:layout_constraintTop_toTopOf="@id/tv_user_name" />

        <TextView
            android:id="@+id/tv_result_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text="N점"
            android:textColor="@color/main_purple"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/tv_result_1"
            app:layout_constraintTop_toTopOf="@id/tv_user_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suite_semi_bold"
            android:text=" 입니다."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/tv_result_score"
            app:layout_constraintTop_toTopOf="@id/tv_user_name" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_result_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/suite_medium"
        android:text="14-16 : 스트레스 지수 40% (비교적 심한 스트레스)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_user" />

    <TextView
        android:id="@+id/tv_result_message_0_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/suite_medium"
        android:text="⦁ 0-11 : 스트레스 지수 0%"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message" />

    <TextView
        android:id="@+id/tv_result_message_12_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="⦁ 12-13 : 스트레스 지수 20% (약간 스트레스)"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_result_message_0_11"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message_0_11" />

    <TextView
        android:id="@+id/tv_result_message_14_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="⦁ 14-16 : 스트레스 지수 40% (비교적 심한 스트레스)"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_result_message_0_11"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message_12_13" />

    <TextView
        android:id="@+id/tv_result_message_17_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="⦁ 17-20 : 스트레스 지수 60% (심한 스트레스)"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_result_message_0_11"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message_14_16" />

    <TextView
        android:id="@+id/tv_result_message_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="⦁ 21 이상 : 스트레스 지수 80% (탈진기 수준의 위험기)"
        android:textColor="@color/gray3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_result_message_0_11"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message_17_20" />


    <ImageView
        android:id="@+id/iv_result_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="돌아가기 버튼"
        android:src="@drawable/img_result_dialog_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="돌아가기"
        android:textColor="@color/main_purple"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_back"
        app:layout_constraintEnd_toEndOf="@id/iv_result_back"
        app:layout_constraintStart_toStartOf="@id/iv_result_back"
        app:layout_constraintTop_toTopOf="@id/iv_result_back" />

    <ImageView
        android:id="@+id/iv_result_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="확인하기 버튼"
        android:src="@drawable/img_result_dialog_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suite_medium"
        android:text="확인하기"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_ok"
        app:layout_constraintEnd_toEndOf="@id/iv_result_ok"
        app:layout_constraintStart_toStartOf="@id/iv_result_ok"
        app:layout_constraintTop_toTopOf="@id/iv_result_ok" />


</androidx.constraintlayout.widget.ConstraintLayout>