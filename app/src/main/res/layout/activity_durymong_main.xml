<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_durymong_main_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/img_logo_with_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/suite_medium"
        android:text="당신과 함께할 따뜻한 꿈, 두리몽"
        android:textColor="@color/gray4"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_durymong_main_logo" />

    <Button
        android:id="@+id/btn_durymong_main_login"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/v_home_radius_8dp_stroke_1dp"
        android:fontFamily="@font/suite_medium"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_durymong_main_create_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_durymong_main_create_account"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/v_home_radius_8dp"
        android:backgroundTint="@color/main_purple"
        android:fontFamily="@font/suite_medium"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>